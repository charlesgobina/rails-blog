<div class="user-wrapper">
  <div class="user-ind-wrapper">
    <figure>
      <img src="<%= @user.photo %>" width="100px" height="auto" alt="<%= @user.name %>">
    </figure>
    <div class="user-name-post">
      <div class="user-name"><%= @user.name %></div>
      <div class="user-post-counter"><%= "Number of posts: #{@user.posts_counter}" %></div>
    </div>
  </div>
</div>