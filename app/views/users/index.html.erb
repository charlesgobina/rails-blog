<h1>Users#index</h1>
<div>
  <% "<p>No users yet!</p>" if @users.empty? %>
  <% @users.each do |user|%>
    <div>
      <figure>
        <img src="<%= user.photo %>" width="100px" height="auto" alt="<%= user.name %>">
      </figure>
      <div>
        <%= link_to "#{user.name}", user %>
        <%= "Number of posts: #{user.posts_counter}" %>
      </div>
    </div>
  <% end %>
</div>
