<h1>Posts#New</h1>

<%= form_with model: @post, url: "/users/#{current_user.id}/posts" do |form| %>
  <div>
    <%= form.hidden_field :author_id, value: current_user.id %>
  </div>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :text %>
    <%= form.text_area :text %>
  </div>
  <%= form.submit %>
<% end %>